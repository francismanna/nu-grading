{#
/**
 * @file
 * Tourism+'s theme override for the block entity refernece field for the tabs powered custom block
 *
 * @see tourismplus_preprocess_field__field_mt_destinations()
 */
#}
{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}
{{ attach_library('tourismplus/google-maps-init') }}
<div{{ attributes.addClass(classes) }}>
  {% if not label_hidden %}
    <h3{{ title_attributes.addClass(title_classes) }}>{{ label }}</h3>
  {% endif %}
  <div class="google-map-canvas"
    data-attribute-mt-locations="{{ map_locations }}"
    data-attribute-mt-map-zoom="{{ field_mt_map_zoom_value }}">
  </div>
</div>
